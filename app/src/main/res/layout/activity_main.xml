<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jewelmahmud.calculator.sensorslist.MainActivity"
    android:background="#85CF8A">

    <!-- App Title -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/Name"
        android:textSize="@dimen/default_size"
        android:textAlignment="center"
        android:id="@+id/title"
        android:layout_marginTop="@dimen/default_size"
        />


    <!-- MODE LIST -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/mode"
        android:id="@+id/mode"
        android:layout_below="@+id/silent"
        android:layout_centerHorizontal="true" />


    <!-- VIBRATE LIST -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibrate"
        android:id="@+id/vibrate"
        android:layout_above="@+id/mode"
        android:layout_centerHorizontal="true" />

    <!-- RINGING LIST -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ringing"
        android:id="@+id/ring"
        android:layout_above="@+id/mode"
        android:layout_toRightOf="@+id/vibrate"
        android:layout_toEndOf="@+id/vibrate"/>


    <!-- SILENT LIST -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/silent"
        android:id="@+id/silent"
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/mode"
        android:layout_toStartOf="@+id/mode"
        android:layout_marginTop="53dp" />




</RelativeLayout>
